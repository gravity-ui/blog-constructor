{
  "extends": "@gravity-ui/tsconfig/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDirs": ["src"],
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "module": "esNext",
    "jsx": "react",
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["**/*.stories.tsx"]
}
