{
  "name": "@gravity-ui/blog-constructor",
  "version": "6.3.0",
  "description": "Gravity UI Blog Constructor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gravity-ui/blog-constructor"
  },
  "exports": {
    ".": {
      "types": "./build/esm/index.d.ts",
      "require": "./build/cjs/index.js",
      "import": "./build/esm/index.js"
    },
    "./server": {
      "types": "./server/index.d.ts",
      "require": "./server/index.js",
      "import": "./server/index.js"
    },
    "./styles/*": "./styles/*"
  },
  "files": [
    "build",
    "styles",
    "server"
  ],
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "typings": "build/esm/index.d.ts",
  "scripts": {
    "deps:install": "npm ci",
    "deps:truncate": "npm prune --production",
    "lint:fix": "run-s lint:js:fix lint:styles:fix lint:prettier:fix typecheck",
    "lint:js": "eslint '**/*.{js,jsx,ts,tsx}' --max-warnings=0",
    "lint:js:fix": "eslint '**/*.{js,jsx,ts,tsx}' --max-warnings=0 --quiet --fix",
    "lint:styles": "stylelint '{styles,src}/**/*.scss'",
    "lint:styles:fix": "stylelint **/*.scss -s scss --fix",
    "lint:prettier": "prettier --check '**/*.{js,jsx,ts,tsx,css,scss,json,yaml,yml,md}'",
    "lint:prettier:fix": "prettier --write '**/*.{js,jsx,ts,tsx,css,scss,json,yaml,yml,md}'",
    "lint": "run-p lint:js lint:styles lint:prettier typecheck",
    "typecheck": "tsc --noEmit",
    "dev": "npm run storybook:start",
    "start": "node dist",
    "clean": "gulp clean",
    "build": "npm run clean && gulp",
    "storybook:start": "storybook dev -p 7010",
    "storybook:build": "storybook build -c .storybook -o storybook-static",
    "prepublishOnly": "npm run lint && npm run build",
    "prepare": "husky install",
    "svgo": "svgo --config svgo.config.js",
    "svgo:all": "svgo --config svgo.config.js -r -f assets",
    "test": "jest --maxWorkers=50%",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll --maxWorkers=25%"
  },
  "dependencies": {
    "@bem-react/classname": "^1.6.0",
    "@gravity-ui/components": "^3.4.2",
    "@gravity-ui/i18n": "^1.4.0",
    "lodash": "^4.17.21",
    "react-helmet": "^6.1.0",
    "ua-parser-js": "^0.7.28",
    "url": "^0.11.0",
    "utility-types": "^3.10.0",
    "uuid": "^9.0.1"
  },
  "peerDependencies": {
    "@diplodoc/transform": "^4.10.7",
    "@gravity-ui/page-constructor": "^5.0.0",
    "@gravity-ui/uikit": "^6.1.1",
    "react": "^16.0.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@commitlint/config-conventional": "^17.4.3",
    "@diplodoc/transform": "^4.10.8",
    "@gravity-ui/eslint-config": "^3.1.1",
    "@gravity-ui/page-constructor": "^5.18.0",
    "@gravity-ui/prettier-config": "^1.1.0",
    "@gravity-ui/stylelint-config": "^4.0.1",
    "@gravity-ui/tsconfig": "^1.0.0",
    "@gravity-ui/uikit": "^6.22.0",
    "@jest/environment": "^29.7.0",
    "@storybook/addon-essentials": "^8.0.5",
    "@storybook/addon-mdx-gfm": "^8.0.5",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.3",
    "@storybook/cli": "^8.0.5",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^8.0.5",
    "@storybook/react-webpack5": "^8.0.5",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.5",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.176",
    "@types/react": "^18.0.26",
    "@types/react-helmet": "^6.1.5",
    "@types/ua-parser-js": "^0.7.36",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.34.0",
    "eslint-plugin-no-not-accumulator-reassign": "^0.1.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "gulp": "^4.0.2",
    "gulp-dart-sass": "^1.0.2",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.3",
    "gulp-typescript": "^6.0.0-alpha.1",
    "html-loader": "^1.3.2",
    "husky": "^7.0.4",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-transform-css": "^6.0.1",
    "js-yaml": "^3.14.1",
    "lint-staged": "^11.2.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "sass": "^1.54.4",
    "sass-loader": "^13.3.1",
    "storybook": "^8.0.5",
    "stylelint": "^15.11.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.3"
  },
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --quiet",
      "prettier --write"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ]
  }
}
