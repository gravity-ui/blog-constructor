{
  "extends": ["@gravity-ui/eslint-config", "@gravity-ui/eslint-config/prettier", "@gravity-ui/eslint-config/client"],
  "root": true,
  "overrides": [
      {
          "files": ["*.ts", "*.tsx"],
          "rules": {
              "valid-jsdoc": "off"
          }
      },
      {
          "files": ["**/__tests__/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)"],
          "extends": ["plugin:testing-library/react"]
      },
      {
          "files": ["**/__stories__/**/*.[jt]s?(x)"],
          "rules": {
              "no-console": "off"
          }
      }
  ],
  "env": {
    "node": true,
    "jest": true
  }
}
